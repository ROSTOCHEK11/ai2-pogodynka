{% extends 'base.html.twig' %}

{% block title %}WeatherData{% endblock %}

{% block body %}
    <h1>WeatherData</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ weather_datum.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ weather_datum.date ? weather_datum.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ weather_datum.temperature }}</td>
            </tr>
            <tr>
                <th>Humidity</th>
                <td>{{ weather_datum.humidity }}</td>
            </tr>
            <tr>
                <th>Pressure</th>
                <td>{{ weather_datum.pressure }}</td>
            </tr>
            <tr>
                <th>Wind_speed</th>
                <td>{{ weather_datum.windSpeed }}</td>
            </tr>
            <tr>
                <th>Weather_type</th>
                <td>{{ weather_datum.weatherType }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_weather_data_index') }}">back to list</a>

    <a href="{{ path('app_weather_data_edit', {'id': weather_datum.id}) }}">edit</a>

